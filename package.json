{
  "name": "shogun-bip44",
  "version": "1.1.1",
  "description": "BIP44 HD Wallet Plugin for Shogun Core - Provides secure hierarchical deterministic wallet management functionality",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "browser": "dist/browser/index.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "browser": "./dist/browser/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:cjs && npm run build:esm && npm run build:browser",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:browser": "webpack --mode production",
    "clean": "rimraf dist",
    "test": "jest",
    "lint": "prettier --check src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "shogun",
    "bip44",
    "hdwallet",
    "ethereum",
    "wallet",
    "cryptocurrency",
    "blockchain",
    "deterministic",
    "hierarchical",
    "plugin"
  ],
  "author": "Shogun Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shogun-org/shogun-bip44.git"
  },
  "dependencies": {
    "ethers": "^6.7.1",
    "gun": "^0.2020.1235",
    "shogun-core": "latest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
